<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        style="@style/sched_builder_h1_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_line" />

    <View style="@style/sched_build_divider" />

    <Spinner
        android:id="@+id/line_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/sched_builder_h1_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stops" />

    <View style="@style/sched_build_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/sched_builder_h2_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start" />

            <Spinner
                android:id="@+id/start_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/switch_start_end_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_compare_arrows_black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/sched_builder_h2_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/end" />

            <Spinner
                android:id="@+id/end_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/sched_builder_h1_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_time" />

    <View style="@style/sched_build_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:id="@+id/arrive_depart_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/sched_builder_h2_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start" />

    </LinearLayout>

</LinearLayout>